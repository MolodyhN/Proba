#include<iostream>
#include<cmath>
using namespace std;
int x, n;

double xer(double a) {
	double z = 1;
	for(int i = 1; i <= a; i++){
		z *= i;
	}
	return z;
}
double xz(double x, double n) {
	double s = x;
	for (int i = 1; i <= n; i++) {
		double a = (2 * i + 1);
		s += pow(x, a) / xer(a);
	}
	return s;
}
int main() {
	setlocale(LC_ALL, "Ru");
	cout << "Введите n:";
	cin >> n;
	cout << endl << "Введите x:";
	cin >> x;
	double k = xz(x, n);
	cout << "Ответ:" << k;
}
