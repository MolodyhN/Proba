// Ханойские башни
#include <iostream>

using namespace std;

void hanoi_towers(int kolza, int from, int to, int xz)  //kolza-число колец, from-начальное положение колец(1-3),to-конечное положение колец(1-3)
{                               //xz - промежуточный колышек(1-3)
    if (kolza != 0)
    {
        hanoi_towers(kolza - 1, from, xz, to);       //спускаемся на одно кольцо

        cout << from << " -> " << to << endl;

        hanoi_towers(kolza - 1, xz, to, from);      //меняем местами стержни из которого и на который
    }
}

int main()
{
    setlocale(LC_ALL, "rus");
    int a, b, c, n;
    cout << "Номер первого столбика:" << endl;
    cin >> a;
    cout << "Номер конечного столбика:" << endl;
    cin >> b;
    c = abs(a - b);
    cout << "Количество дисков:" << endl;
    cin >> n;

    hanoi_towers(n, a, b, c);        //вызов функции
    return 0;
}
