#include<iostream>
#include<math.h>
using namespace std;

int max_element(int n, int a[], int b)
{
	int c = 1 / n;
	for (int i = 1; i < b; i++)
		cout << "Возведенная в степень:" << pow(a[i], n) << "Извлеченный корень:" << pow(a[i], c) << endl;
	return 0;
}
long max_element(int n, long a[], int b)
// находит максимальный элемент для массива типа long
{
	int c = 1 / n;
	for (int i = 1; i < b; i++)
		cout << "Возведенная в степень:" << pow(a[i], n) << "Извлеченный корень:" << pow(a[i], c) << endl;
	return 0;
}
double max_element(int n, double a[], int b)
// находит максимальный элемент для массива типа double
{
	int c = 1 / n;
	for (int i = 1; i < b; i++)
		cout << "Возведенная в степень:" << pow(a[i], n) << "Извлеченный корень:" << pow(a[i], c) << endl;
	return 0;
}
float max_element(int n, float a[], int b)
// находит максимальный элемент для массива типа float
{
	int c = 1 / n;
	for (int i = 1; i < b; i++)
		cout << "Возведенная в степень:" << pow(a[i], n) << "Извлеченный корень:" << pow(a[i], c) << endl;
	return 0;
}
int main() {
	int n;
	setlocale(LC_ALL, "Ru");
	cout << "Введите n:";
	cin >> n;
	int a[5] = { 1,2,3,4,5 };
	int b = 5;
	max_element(n, a, b);

}
